        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab1_Ex2_WPF_Application"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="85*"/>
            <ColumnDefinition Width="179*"/>
        </Grid.ColumnDefinitions>
        <TextBox Height="28" HorizontalAlignment="Left" Margin="12,12,0,0" Name="testInput" VerticalAlignment="Top" Width="302" Grid.ColumnSpan="3" />
        <Button Content="Format Data" Height="23" HorizontalAlignment="Left" Margin="65,17,0,0" Name="testButton" VerticalAlignment="Top" Width="80" Click="testButton_Click" Grid.Column="2"  />
        <TextBlock Height="238" HorizontalAlignment="Left" Margin="14,50,0,0" Name="formattedText" VerticalAlignment="Top" Width="384" Grid.ColumnSpan="3" />
    </Grid>
</Window>
