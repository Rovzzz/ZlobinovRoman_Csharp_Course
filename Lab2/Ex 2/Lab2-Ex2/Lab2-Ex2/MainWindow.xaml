<Window x:Class="Lab2_Ex2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab2_Ex2"
        mc:Ignorable="d"
        Title="IntegerToBinary" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="89*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="inputTextBox" HorizontalAlignment="Left" Height="28" Margin="12,12,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2"/>
        <Button x:Name="convertButton" Content="Convert" HorizontalAlignment="Left" Margin="58,12,0,0" VerticalAlignment="Top" Width="75" Height="23" Click="convertButton_Click" Grid.Column="1"/>
        <Label x:Name="binaryLabel" Content="0" HorizontalAlignment="Left" Margin="12,41,0,0" VerticalAlignment="Top" Height="28" Width="120" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
