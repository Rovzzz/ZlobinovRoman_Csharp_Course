<Window x:Class="Lab2_Ex3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab2_Ex3"
        mc:Ignorable="d"
        Title="MatrixMultiplication" Height="578" Width="649">
    <Grid>
        <Grid x:Name="grid1" HorizontalAlignment="Left" Height="176" Margin="28,24,0,0" VerticalAlignment="Top" Width="254" ShowGridLines="True" />
        <Grid x:Name="grid2" HorizontalAlignment="Left" Height="176" Margin="357,24,0,0" VerticalAlignment="Top" Width="258" ShowGridLines="True"/>
        <Grid x:Name="grid3" HorizontalAlignment="Left" Height="261" Margin="250,266,0,0" VerticalAlignment="Top" Width="365" ShowGridLines="True"/>
        
        <ComboBox x:Name="matrix1width" HorizontalAlignment="Left" Margin="12,206,0,0" VerticalAlignment="Top" Width="166" Height="23" SelectedIndex="0" SelectionChanged="matrixdimensions_changed">
            <ComboBoxItem Content="Matrix 1: 1 Column" />
            <ComboBoxItem Content="Matrix 1: 2 Columns" />
            <ComboBoxItem Content="Matrix 1: 3 Columns" />
            <ComboBoxItem Content="Matrix 1: 4 Columns" />
            <ComboBoxItem Content="Matrix 1: 5 Columns" />
            <ComboBoxItem Content="Matrix 1: 6 Columns" />
            <ComboBoxItem Content="Matrix 1: 7 Columns" />
            <ComboBoxItem Content="Matrix 1: 8 Columns" />
            <ComboBoxItem Content="Matrix 1: 9 Columns" />
            <ComboBoxItem Content="Matrix 1: 10 Columns" />
        </ComboBox>

        <ComboBox x:Name="matrix1height" HorizontalAlignment="Left" Margin="250,206,0,0" VerticalAlignment="Top" Width="120" Height="23" SelectedIndex="0" SelectionChanged="matrixdimensions_changed">
            <ComboBoxItem Content="Matrix 1: 1 Row" />
            <ComboBoxItem Content="Matrix 1: 2 Rows" />
            <ComboBoxItem Content="Matrix 1: 3 Rows" />
            <ComboBoxItem Content="Matrix 1: 4 Rows" />
            <ComboBoxItem Content="Matrix 1: 5 Rows" />
            <ComboBoxItem Content="Matrix 1: 6 Rows" />
            <ComboBoxItem Content="Matrix 1: 7 Rows" />
            <ComboBoxItem Content="Matrix 1: 8 Rows" />
            <ComboBoxItem Content="Matrix 1: 9 Rows" />
            <ComboBoxItem Content="Matrix 1: 10 Rows" />
        </ComboBox>

        <ComboBox Height="23" HorizontalAlignment="Left" Margin="437,206,0,0" Name="matrix2width" 
                  SelectedIndex="0" VerticalAlignment="Top" Width="178" SelectionChanged="matrixdimensions_changed"   >
            <ComboBoxItem Content="Matrix 2: 1 Column" />
            <ComboBoxItem Content="Matrix 2: 2 Columns" />
            <ComboBoxItem Content="Matrix 2: 3 Columns" />
            <ComboBoxItem Content="Matrix 2: 4 Columns" />
            <ComboBoxItem Content="Matrix 2: 5 Columns" />
            <ComboBoxItem Content="Matrix 2: 6 Columns" />
            <ComboBoxItem Content="Matrix 2: 7 Columns" />
            <ComboBoxItem Content="Matrix 2: 8 Columns" />
            <ComboBoxItem Content="Matrix 2: 9 Columns" />
            <ComboBoxItem Content="Matrix 2: 10 Columns" />
        </ComboBox>

        <Button Content="Посчитать" Height="43" HorizontalAlignment="Left" Margin="12,484,0,0" Name="buttonCalculate" VerticalAlignment="Top" Width="116" Click="buttonCalculate_Click" />
        <Label Content="Матрица 1" Height="28" HorizontalAlignment="Left" Margin="28,0,0,0" Name="label1" VerticalAlignment="Top" Width="120" />
        <Label Content="Матрица 2" Height="28" HorizontalAlignment="Left" Margin="357,0,0,0" Name="label2" VerticalAlignment="Top" Width="120" />
        <Label Content="Результат Матрицы" Height="28" HorizontalAlignment="Left" Margin="250,235,0,0" Name="label3" VerticalAlignment="Top" Width="120" />


    </Grid>
</Window>
